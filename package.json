{
	"name": "4dn-microscopy-metadata-tool-standalone",
	"version": "0.0.16-1",
	"private": true,
	"main": "./main.js",
	"publishConfig": {
		"access": "restricted"
	},
	"dependencies": {
		"4dn-microscopy-metadata-tool": "github:WU-BIMAC/4DNMicroscopyMetadataToolReact#master",
		"react": "^16.8.6",
		"react-bootstrap": "^1.0.0-beta.12",
		"react-dom": "^16.8.6"
	},
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"start": "electron .",
		"test": "node scripts/test.js",
		"build-internal": "gulp build-internal",
		"prod": "gulp build",
		"dev": "gulp dev",
		"build": "gulp build-dev && gulp build",
		"dist": "gulp build-dev && build",
		"update-mma": "npm uninstall 4dn-microscopy-metadata-tool && npm cache clean --force && npm install 4dn-microscopy-metadata-tool@github:WU-BIMAC/4DNMicroscopyMetadataToolReact#master --save",
		"dist_win": "build --win --x64 --ia32",
		"dist_mac": "build --mac"
	},
	"build": {
		"appId": "com.4dn.MicroscopyMetadataTool",
		"asar": true,
		"files": [
			"**/*",
			"build/*.js",
			"!dist/**/*",
			"!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
			"!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
			"!**/node_modules/*.d.ts",
			"!**/node_modules/.bin",
			"!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
			"!.editorconfig",
			"!**/._*",
			"!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
			"!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
			"!**/{appveyor.yml,.travis.yml,circle.yml}",
			"!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
		],
		"directories": {
			"app": "./"
		},
		"dmg": {
			"contents": [
				{
					"x": 110,
					"y": 150
				},
				{
					"x": 240,
					"y": 150,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"linux": {
			"target": [
				"AppImage",
				"deb"
			]
		},
		"win": {
			"target": "zip",
			"icon": "build/icon.ico"
		}
	},
	"browserslist": [
		">0.2%",
		"not dead",
		"not ie <= 11",
		"not op_mini all"
	],
	"devDependencies": {
		"css-loader": "^3.2.0",
		"style-loader": "^1.0.0",
		"@babel/core": "^7.4.5",
		"@babel/preset-env": "^7.4.5",
		"@babel/preset-react": "^7.0.0",
		"babel-loader": "^8.0.6",
		"electron": "^5.0.2",
		"electron-builder": "^20.41.0",
		"eslint": "6.5.0",
		"eslint-plugin-react": "7.13.0",
		"fancy-log": "^1.3.3",
		"fs": "0.0.1-security",
		"gulp": "^4.0.2",
		"plugin-error": "^1.0.1",
		"webpack": "^4.32.2",
		"webpack-cli": "^3.3.2"
	},
	"babel": {
		"presets": [
			"@babel/env",
			"@babel/react"
		]
	}
}
